<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        Icon="https://cdn-icons-png.flaticon.com/512/9741/9741134.png"
        mc:Ignorable="d"
        Title="Aufgabenverwaltung" Height="450" Width="600">
    <Grid>
        <Label HorizontalAlignment="Left" Content="Aufgaben Liste:" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="22" Width="390" Grid.ColumnSpan="2"/>
        <Label x:Name="consoleLabel" Content=" " HorizontalAlignment="Left" Margin="178,10,0,0" VerticalAlignment="Top" FontSize="22" Width="412"/>
        <ListView x:Name="dataListView" Margin="10,54,10,0" SelectionChanged="ListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn x:Name="Titel" DisplayMemberBinding="{Binding Titel}" Header="Land"/>
                    <GridViewColumn x:Name="FälligkeitsDatum" DisplayMemberBinding="{Binding Fälligkeitsdatum}" Header="Kürzel"/>
                    <GridViewColumn x:Name="Abgeschlossen" DisplayMemberBinding="{Binding Abgeschlossen}" Header="Name"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
