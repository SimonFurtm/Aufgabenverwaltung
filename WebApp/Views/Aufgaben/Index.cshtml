@model IEnumerable<WebApp.Models.Aufgabe>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beschreibung)
            </th>
            <th>
                <!--.ToString("dddd, MMMM dd, yyyy h:mm tt")-->
                @Html.DisplayNameFor(model => model.Fälligkeitsdatum) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Erstelldatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abgeschlossen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beschreibung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fälligkeitsdatum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Erstelldatum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abgeschlossen)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
